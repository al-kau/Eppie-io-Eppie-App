<UserControl x:Class="Settings.OptionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="using:Settings.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:Settings"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">

    <UserControl.Resources>
        <converters:DoubleToGridLengthConverter x:Name="DoubleToGridLengthConverter" />
        <converters:BoolToVisabilityConverter x:Name="BoolToVisabilityConverter" />

        <SolidColorBrush x:Key="DefaultTextNoteForegroundBrush" Color="{ThemeResource TextFillColorSecondary}" />
        <Thickness x:Key="DefaultTextCaptionMargin">0,0,0,4</Thickness>
        <Thickness x:Key="OptionNameColumnMargin">0,0,36,0</Thickness>
        <GridLength x:Key="DefaultOptionNameColumnLength">376</GridLength>
        <x:Double x:Key="DefaultOptionNameColumnWidth">376</x:Double>

        <Style x:Key="OptionCaptionTextBlockStyle"
               BasedOn="{StaticResource BodyTextBlockStyle}"
               TargetType="TextBlock" />
        <Style x:Key="OptionNoteTextBlockStyle"
               BasedOn="{StaticResource BodyTextBlockStyle}"
               TargetType="TextBlock">
            <Setter Property="Foreground" Value="{ThemeResource DefaultTextNoteForegroundBrush}" />
        </Style>

    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{StaticResource DefaultOptionNameColumnLength}"
                              MinWidth="{StaticResource DefaultOptionNameColumnWidth}"
                              MaxWidth="{StaticResource DefaultOptionNameColumnWidth}" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="{x:Bind IndentHeight, Mode=OneWay, Converter={StaticResource DoubleToGridLengthConverter}}"
                           MinHeight="{x:Bind IndentHeight, Mode=OneWay}"
                           MaxHeight="{x:Bind IndentHeight, Mode=OneWay}" />
        </Grid.RowDefinitions>

        <StackPanel x:Name="HeaderText"
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="0"
                    Margin="{StaticResource OptionNameColumnMargin}"
                    VerticalAlignment="Top">
            <TextBlock x:Name="CaptionBlock"
                       Margin="{StaticResource DefaultTextCaptionMargin}"
                       VerticalAlignment="Top"
                       Style="{StaticResource OptionCaptionTextBlockStyle}"
                       Text="{x:Bind Caption, Mode=OneWay}"
                       TextTrimming="CharacterEllipsis" />
            <TextBlock x:Name="NoteBlock"
                       VerticalAlignment="Top"
                       Style="{StaticResource OptionNoteTextBlockStyle}"
                       TextTrimming="CharacterEllipsis"
                       TextWrapping="WrapWholeWords" />
        </StackPanel>

        <ContentPresenter Grid.Row="0"
                          Grid.Column="1"
                          Content="{x:Bind OptionContent, Mode=OneTime}" />

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="CommonStates">
                <VisualState x:Name="Normal" />
                <VisualState x:Name="HideNoteText">
                    <VisualState.StateTriggers>
                        <StateTrigger IsActive="{x:Bind HideNoteMode, Mode=OneWay}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="NoteBlock.Visibility" Value="Collapsed"/>
                        <Setter Target="CaptionBlock.VerticalAlignment" Value="Center"/>
                        <Setter Target="HeaderText.VerticalAlignment" Value="Center"/>
                        <Setter Target="HeaderText.(Grid.RowSpan)" Value="1"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</UserControl>

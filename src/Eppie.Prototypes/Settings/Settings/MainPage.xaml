<Page x:Class="Settings.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Settings"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      Loaded="OnLoaded">

    <Page.Resources>

        <Style x:Key="SettingsSectionSubtitleTextBlockStyle"
               BasedOn="{StaticResource SubtitleTextBlockStyle}"
               TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Margin" Value="0,0,0,24" />
        </Style>


        <x:Double x:Key="NormalOptionIndentHeight">36</x:Double>
        <x:Double x:Key="GroupOptionIndentHeight">24</x:Double>
        <x:Double x:Key="EndSectionOptionIndentHeight">48</x:Double>

        <x:Double x:Key="NormalOptionControlWidth">276</x:Double>
        <x:Double x:Key="ButtonMinWidth">80</x:Double>

    </Page.Resources>

    <ScrollViewer IsTabStop="True">
        <Grid Margin="44,24,48,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="24"
                               MinHeight="24"
                               MaxHeight="24" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>


            <TextBlock FontSize="14" Text="ACCOUNT SETTINGS" />

            <Button HorizontalAlignment="Right" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal">
                    <FontIcon Margin="0,0,4,0"
                              FontSize="16"
                              Glyph="&#xF3B1;" />
                    <TextBlock Text="Sign out" />
                </StackPanel>
            </Button>

            <StackPanel x:Name="SettingsControl" Grid.Row="2">

                <TextBlock Style="{StaticResource SettingsSectionSubtitleTextBlockStyle}" Text="Appearance" />

                <local:OptionControl Caption="Language"
                                     IndentHeight="{StaticResource NormalOptionIndentHeight}"
                                     TextNote="Choose the app language.">
                    <local:OptionControl.OptionContent>
                        <Grid>
                            <ComboBox x:Name="LanguageCombobox"
                                      Width="{StaticResource NormalOptionControlWidth}"
                                      HorizontalAlignment="Left">
                                <x:String>(System default)</x:String>
                                <x:String>English (USA)</x:String>
                                <x:String>Polish</x:String>
                            </ComboBox>
                            <TextBlock HorizontalAlignment="Right"
                                       Foreground="{ThemeResource TextFillColorSecondary}"
                                       Style="{StaticResource BodyTextBlockStyle}">
                                <Span>
                                    <Run Text="Help us with " />
                                    <Hyperlink NavigateUri="https://crowdin.com/">
                                        <Run Text="translation" />
                                    </Hyperlink>
                                </Span>
                            </TextBlock>
                        </Grid>
                    </local:OptionControl.OptionContent>
                </local:OptionControl>
                <local:OptionControl Caption="Themes"
                                     IndentHeight="{StaticResource EndSectionOptionIndentHeight}"
                                     TextNote="Select your preferred color scheme.">
                    <local:OptionControl.OptionContent>
                        <ComboBox x:Name="ThemeCombobox"
                                  Width="{StaticResource NormalOptionControlWidth}"
                                  HorizontalAlignment="Left">
                            <x:String>(System mode)</x:String>
                            <x:String>Light mode</x:String>
                            <x:String>Dark mode</x:String>
                        </ComboBox>
                    </local:OptionControl.OptionContent>
                </local:OptionControl>


                <TextBlock Style="{StaticResource SettingsSectionSubtitleTextBlockStyle}" Text="Security" />


                <local:OptionControl Caption="Ask for password on every launch"
                                     HideNoteMode="True"
                                     IndentHeight="{StaticResource NormalOptionIndentHeight}">
                    <local:OptionControl.OptionContent>
                        <Grid>
                            <ToggleSwitch HorizontalAlignment="Left" VerticalAlignment="Center" />
                            <Button HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Content="Change password" />
                        </Grid>
                    </local:OptionControl.OptionContent>
                </local:OptionControl>

                <local:OptionControl Caption="Seed phrase"
                                     IndentHeight="{StaticResource GroupOptionIndentHeight}"
                                     TextNote="Your seed phrase is the key to your account. Keep it safe and never share.">
                    <local:OptionControl.OptionContent>
                        <Expander HorizontalAlignment="Stretch" Header="View your phrase">
                            <TextBlock Text="Not Implemented" />
                        </Expander>
                    </local:OptionControl.OptionContent>
                </local:OptionControl>

                <local:OptionControl Caption="Confirm your seed phrase"
                                     HideNoteMode="True"
                                     IndentHeight="{StaticResource NormalOptionIndentHeight}">
                    <local:OptionControl.OptionContent>
                        <Grid>
                            <Button MinWidth="{StaticResource ButtonMinWidth}"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Content="Confirm" />
                            <TextBlock HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                                       Text="Waiting for your confirmation" />
                        </Grid>
                    </local:OptionControl.OptionContent>
                </local:OptionControl>

                <local:OptionControl Caption="Local backup"
                                     IndentHeight="{StaticResource GroupOptionIndentHeight}"
                                     TextNote="Save a full copy of all your data to a file.">
                    <local:OptionControl.OptionContent>
                        <Button MinWidth="{StaticResource ButtonMinWidth}"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="Export" />
                    </local:OptionControl.OptionContent>
                </local:OptionControl>

                <local:OptionControl Caption="Restore your data from file"
                                     HideNoteMode="True"
                                     IndentHeight="{StaticResource NormalOptionIndentHeight}">
                    <local:OptionControl.OptionContent>
                        <Button MinWidth="{StaticResource ButtonMinWidth}"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="Restore" />
                    </local:OptionControl.OptionContent>
                </local:OptionControl>


                <local:OptionControl Caption="PGP keys"
                                     IndentHeight="{StaticResource EndSectionOptionIndentHeight}"
                                     TextNote="View and configure your PGP keys.">
                    <local:OptionControl.OptionContent>
                        <Grid>
                            <Button MinWidth="{StaticResource ButtonMinWidth}"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Content="Import" />
                            <HyperlinkButton MinWidth="{StaticResource ButtonMinWidth}"
                                             HorizontalAlignment="Right"
                                             VerticalAlignment="Top">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="View all" />
                                    <FontIcon Margin="4,0,0,0"
                                              FontSize="16"
                                              Glyph="&#xE76C;" />
                                </StackPanel>
                            </HyperlinkButton>
                        </Grid>
                    </local:OptionControl.OptionContent>
                </local:OptionControl>


                <TextBlock Style="{StaticResource SettingsSectionSubtitleTextBlockStyle}" Text="Development" />


                <local:OptionControl Caption="Logging level"
                                     IndentHeight="{StaticResource EndSectionOptionIndentHeight}"
                                     TextNote="Set the detail level for app logs.">
                    <local:OptionControl.OptionContent>
                        <Grid>
                            <ComboBox x:Name="LogCombobox"
                                      Width="{StaticResource NormalOptionControlWidth}"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top">
                                <x:String>None</x:String>
                                <x:String>Trace</x:String>
                                <x:String>Debug</x:String>
                                <x:String>Information</x:String>
                                <x:String>Warning</x:String>
                                <x:String>Error</x:String>
                                <x:String>Critical</x:String>
                            </ComboBox>
                            <Button HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Content="Open log folder" />
                        </Grid>
                    </local:OptionControl.OptionContent>
                </local:OptionControl>

            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>

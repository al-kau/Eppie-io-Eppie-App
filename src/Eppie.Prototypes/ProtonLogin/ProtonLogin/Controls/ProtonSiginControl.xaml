<UserControl
    x:Class="ProtonLogin.Controls.ProtonSiginControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ProtonLogin.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    Loaded="OnLoaded"
    mc:Ignorable="d"
    >

    <Grid>
        <local:AuthenticationControl
            x:Name="AuthenticationControl"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            SignInClick="OnSignInClick"
            Visibility="Collapsed"
            />
        <local:CaptchaControl
            x:Name="CaptchaControl"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Visibility="Collapsed"
            />
        <local:TwoFactorAuthenticationControl
            x:Name="TwoFactorAuthenticationControl"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Visibility="Collapsed"
            />
        <local:MailboxPasswordControl
            x:Name="MailboxPasswordControl"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Visibility="Collapsed"
            />
        <StackPanel
            x:Name="DonePanel"
            Margin="44,24,44,48"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical"
            Visibility="Collapsed"
            >
            <TextBlock
                Margin="0,8"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="24"
                Text="Login Completed"
                TextTrimming="CharacterEllipsis"
                />

            <Button
                Margin="0,8"
                HorizontalAlignment="Center"
                Click="OnAgainClick"
                Content="Start Again"
                />
        </StackPanel>

        <StackPanel
            x:Name="FailedPanel"
            Margin="44,24,44,48"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical"
            Visibility="Collapsed"
            >
            <TextBlock
                Margin="0,8"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="24"
                Text="Login failed"
                TextTrimming="CharacterEllipsis"
                />

            <Button
                Margin="0,8"
                HorizontalAlignment="Center"
                Click="OnAgainClick"
                Content="Start Again"
                />
        </StackPanel>

    </Grid>
</UserControl>
